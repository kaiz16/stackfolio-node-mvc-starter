{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "module": "NodeNext",
    "outDir": "dist",
    "useUnknownInCatchVariables": true,
    "paths": {
      "test/*": ["test/*"],
      "~/*": ["src/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"],
    "baseUrl": ".",
  },
  "include":["**/*.ts"],
}